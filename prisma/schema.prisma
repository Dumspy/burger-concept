// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Restaurant {
    id        String    @id @default(cuid())
    image     String    @default("placeholder-burger.jpg")
    body      String?
    name      String
    address   String
    longitude Float
    latitude  Float
    reviews   Review[]
    openings  Opening[]
}

model Opening {
    id           String     @id @default(cuid())
    day          String
    openTime     String
    closeTime    String
    restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
    restaurantId String
}

model Review {
    id                 String     @id @default(cuid())
    image              String?
    burgerName         String
    body               String?
    tasteRating        Int
    textureRating      Int
    presentationRating Int
    restaurant         Restaurant @relation(fields: [restaurantId], references: [id])
    restaurantId       String
    createdAt          DateTime   @default(now())
}
